# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Test methods
GET		/parse									Application.parseXML

# Final methods
GET		/login									Application.login(username:String, password:String)
GET		/load									Application.loadXmlFromSite(username:String, password:String)
POST	/upload									Application.uploadXML

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}



