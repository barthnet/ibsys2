# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET		/doku									Application.doku

# Test methods
GET		/test									Application.test
POST	/test2									Application.test2
GET		/parse									Application.parseXML
GET		/wish									Application.getDistributenWishs
GET		/testLogin								Application.testLogin
POST	/wish									Application.postDistributionWish
GET		/production								Application.getProductionPlan
POST	/production								Application.postProductionPlan

# methods
GET		/login									Application.login
GET		/load									Application.loadXmlFromSite
POST	/upload									Application.uploadXML

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}